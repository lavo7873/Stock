# Auth
ADMIN_USER=admin
ADMIN_PASSWORD=
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
# For production (Vercel): set to your deploy URL, e.g. https://your-app.vercel.app
# On Vercel, VERCEL_URL is auto-injected; override with APP_BASE_URL if needed
NEXTAUTH_URL=http://localhost:3000
CRON_SECRET=generate-secure-random-string

# App base URL (optional). On Vercel, uses VERCEL_URL if not set
APP_BASE_URL=http://localhost:3000

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Market Data
POLYGON_API_KEY=
FINNHUB_API_KEY=

# News
NEWS_API_KEY=
