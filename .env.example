# Auth (HMAC session cookie via sessionCookie.ts)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-password
COOKIE_SIGNING_SECRET=generate-with-openssl-rand-base64-32

# For production (Vercel): set to your deploy URL
NEXTAUTH_SECRET=fallback-if-no-COOKIE_SIGNING_SECRET
NEXTAUTH_URL=http://localhost:3000
CRON_SECRET=generate-secure-random-string

# App base URL (optional). On Vercel, uses VERCEL_URL if not set
APP_BASE_URL=http://localhost:3000

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

